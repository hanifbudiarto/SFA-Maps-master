        <Style x:Key="TextBoxStyle1" BasedOn="{x:Null}" TargetType="{x:Type TextBox}">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>

                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border x:Name="bg"   BorderBrush="#FFD4D4D4" BorderThickness="0,0,0,2"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center" />
                            <Label Margin="5,0,0,0" x:Name="WaterMarkLabel" Content="{TemplateBinding Tag}" VerticalAlignment="Center"
                               Visibility="Collapsed" Foreground="#888888" FontFamily="Arial"/>
                        </Grid>

                        <!--<Border x:Name="bg" BorderBrush="#ffffff" BorderThickness="0,0,0,1">
                            <ScrollViewer x:Name="PART_ContentHost" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>-->

                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility" TargetName="WaterMarkLabel" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="DimGray"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" TargetName="bg" Value="#888888"/>
                                <Setter Property="BorderThickness" TargetName="bg" Value="0,0,0,2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" TargetName="bg" Value="#FF77CEFF"/>
                                <Setter Property="BorderThickness" TargetName="bg" Value="0,0,0,2"/>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



    </Window.Resources>

    <Grid>

        <Border 
					   
					    Margin="35"
					    BorderBrush="#FF3B5998"
					    BorderThickness="0"
					    CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40"
							    Opacity=".3"
							    ShadowDepth="15" />
            </Border.Effect>
            <Border x:Name="ReceiverColor"
						    BorderBrush="#FFffffff"
						    BorderThickness="0"
						    CornerRadius="5">
                <Grid>
                    <Border x:Name="Mask"
								Background="White"
								BorderBrush="#FF3B5998"
								BorderThickness="0"
								CornerRadius="5"/>

                    <StackPanel>
                        <StackPanel.OpacityMask>
                            <VisualBrush Visual="{Binding ElementName=Mask}" />
                        </StackPanel.OpacityMask>

                    </StackPanel>

                </Grid>
            </Border>
        </Border>

        <StackPanel Orientation="Vertical" Margin="0,70,0,115" HorizontalAlignment = "Center" Width="400">
            <TextBox x:Name="textbox_sales"  Tag="Search sales" Style="{DynamicResource TextBoxStyle1}" VerticalContentAlignment="Center" Height="33"  TextWrapping="Wrap" Text="" Canvas.Top="64" Width="280"  TabIndex="1" FontSize="16" AcceptsReturn="False"    VerticalAlignment="Top" Background="{x:Null}" BorderBrush="White" Foreground="Black" CaretBrush="Gray" BorderThickness="0,0,0,1" MaxLines="1" KeyUp="textbox_sales_KeyUp">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return" Command="" />
                </TextBox.InputBindings>

            </TextBox>
            <ListView x:Name="list_daftar" BorderThickness="0" Background="#FFffffff"  ScrollViewer.HorizontalScrollBarVisibility="Disabled"  Margin="0,10,0,0"   Height="200" SelectionChanged="list_daftar_SelectionChanged" >
                <ListView.ItemContainerStyle>
                    <Style  TargetType="{x:Type ListViewItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <Border x:Name="border" BorderThickness="0,0,0,0" Background="Transparent">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal" />
                                                <VisualState x:Name="Disabled" />
                                            </VisualStateGroup>
                                            <VisualStateGroup x:Name="SelectionStates">
                                                <VisualState x:Name="Unselected" />
                                                <VisualState x:Name="Selected">
                                                    <Storyboard>
                                                        <ColorAnimationUsingKeyFrames Storyboard.TargetName="border"
														Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                            <EasingColorKeyFrame KeyTime="0" Value="LightBlue" />
                                                        </ColorAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="SelectedUnfocused">
                                                    <Storyboard>
                                                        <ColorAnimationUsingKeyFrames Storyboard.TargetName="border"
														Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                            <EasingColorKeyFrame KeyTime="0" Value="SkyBlue" />
                                                        </ColorAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!--<StackPanel/>
                   High memory usage-->
                        <VirtualizingStackPanel Margin="0,0,0,80">
                            <!--Less memeory usage-->
                        </VirtualizingStackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid  VerticalAlignment="Top" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <Grid Width="30" Height="30" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <Border Canvas.Left="55"
					Canvas.Top="30"
					Width="30"
					Height="30"
					Margin="0"
					VerticalAlignment="Center"
					BorderBrush="#33475285"
					BorderThickness="2"
					CornerRadius="300">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="1"
							Opacity=".5"
							ShadowDepth="2" />
                                        </Border.Effect>
                                        <Border
						BorderBrush="#FFffffff"
						BorderThickness="0"
						CornerRadius="300">
                                            <Grid>
                                                <Border x:Name="Masks"
								Background="White"
								BorderBrush="#FF3B5998"
								BorderThickness="0"
								CornerRadius="300"/>
                                                <StackPanel>
                                                    <StackPanel.OpacityMask>
                                                        <VisualBrush Visual="{Binding ElementName=Masks}" />
                                                    </StackPanel.OpacityMask>
                                                    <Image RenderOptions.BitmapScalingMode="HighQuality"
									Source="pack://application:,,,/Gambar/avatar_2_raster.png" />
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Border>



                                </Grid>

                            </StackPanel>
                            <Grid Margin="45,0,80,0" VerticalAlignment="Top" >
                                <StackPanel Orientation="Vertical">
                                    <Label FontSize="11"  Foreground="#FF444444"   VerticalAlignment="Center" >
                                        <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding NamaSales}" Foreground="#FF444444"/>
                                    </Label>

                                    <Label FontSize="10"  Foreground="#FF777777"  Margin="0,-10,0,0">
                                        <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding KodeSales}" Foreground="#FF777777"/>
                                    </Label>
                                </StackPanel>

                            </Grid>

                            <Grid>
                                <Button Visibility="Visible" x:Name="btn_select" Content="SELECT" Width="70" Height="25" Margin="0,0,10,0" FontSize="10" Style="{StaticResource ButtonStyle3}" HorizontalAlignment="Right" Foreground="#ffffff"   VerticalAlignment="Center" Click="btn_ok_Click" FontWeight="Bold"/>

                            </Grid>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        
        <!--<DatePicker HorizontalAlignment = "Center"  Margin="10,70,10,0"
         VerticalAlignment = "Top" SelectedDateChanged = "DatePicker_SelectedDateChanged" Width="220" BorderBrush="#FFD4D4D4" BorderThickness="0,0,0,2" Height="32" FontSize="16"
                    />-->

        <StackPanel Margin="10,0,10,60" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button x:Name="btn_cancel" Content="Cancel" Width="90" Height="30" Style="{StaticResource ButtonStyle4}" Foreground="#ffffff" Margin="10,10,10,10" VerticalAlignment="Bottom" Click="btn_cancel_Click"></Button>
            <Button Visibility="Collapsed" x:Name="btn_ok" Content="OK" Width="90" Height="30" Style="{StaticResource ButtonStyle3}" Foreground="#ffffff" Margin="10,10,10,10"  VerticalAlignment="Bottom" Click="btn_ok_Click" FontWeight="Bold"></Button>
        </StackPanel>




